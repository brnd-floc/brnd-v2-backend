    "class-validator": "^0.14.2",
    "cloudinary": "^2.8.0",
    "cookie-parser": "^1.4.6",
    "csurf": "^1.11.0",
    "date-fns": "^3.6.0",
    "ethers": "^6.13.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.6.0",
    "mysql2": "^3.15.2",
